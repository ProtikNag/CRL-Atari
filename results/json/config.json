{
  "seed": 42,
  "device": "auto",
  "games": [
    "ALE/Pong-v5",
    "ALE/Breakout-v5",
    "ALE/SpaceInvaders-v5"
  ],
  "game_labels": {
    "ALE/Pong-v5": "Pong",
    "ALE/Breakout-v5": "Breakout",
    "ALE/SpaceInvaders-v5": "SpaceInvaders"
